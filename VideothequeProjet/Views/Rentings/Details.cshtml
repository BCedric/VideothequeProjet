@model VideothequeProjet.Models.Rentings

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Rentings</h4>
    <hr />
    <dl class="dl-horizontal">
        

        <dt>
            @Html.DisplayNameFor(model => model.Customers)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Customers.firstName)
            @Html.DisplayFor(model => model.Customers.lastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Users)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Users.login)
        </dd>        
        
            
            @if (Model.RentingDetails.Count() != 0)
            {
                <table class="table">

                    <tr>
                        <th>
                            @Html.LabelFor(model => model.RentingDetails.First().DVD.Movies.title)
                        </th>

                        <th>
                            @Html.LabelFor(model => model.RentingDetails.First().DVD.Movies.price)
                        </th>
                    </tr>
                    @foreach (var rd in Model.RentingDetails)
                    {
                        <tr>
                            <td>
                                @rd.DVD.Movies.title
                            </td>
                            <td>
                                @rd.price
                            </td>
                        </tr>
                    }
                </table>
            }
            
        <dt>
            @Html.DisplayNameFor(model => model.cost)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cost)
        </dd>
       
            
        
        
</dl>
    
</div>
<p>
    @(Html.ActionLink("Ajouter des films", "addDVD", new { id = Model.rentingID }, new { @class = "btn btn-primary" }))
    <a href="@Url.Action("ValidateRenting", "Rentings", new {id = Model.rentingID})" class="btn btn-success">Valider</a>
    <a href="@Url.Action("AbandonRenting", "Rentings", new { id = Model.rentingID })" class="btn btn-default">Abandonner</a>
</p>
