@model VideothequeProjet.Models.Rentings

@{
    ViewBag.Title = "Show";
}

<h2>Show</h2>

<div>
    <h4>Rentings</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Customers)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Customers.firstName)
            @Html.DisplayFor(model => model.Customers.lastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Users)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Users.login)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.RentingDetails.First().dateStart)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RentingDetails.First().dateStart)            
        </dd>


        @if (Model.RentingDetails.Count() != 0)
        {
            <table class="table">

                <tr>
                    <th>
                        @Html.LabelFor(model => model.RentingDetails.First().DVD.Movies.title)
                    </th>

                    <th>
                        @Html.LabelFor(model => model.RentingDetails.First().DVD.Movies.price)
                    </th>
                    <th>
                        @Html.LabelFor(model => model.RentingDetails.First().back)
                    </th>
                </tr>
                @foreach (var rd in Model.RentingDetails)
                {
                    <tr>
                        <td>
                            @rd.DVD.Movies.title
                        </td>
                        <td>
                            @rd.price
                        </td>
                        <td>
                            @if (rd.back)
                            {
                                @:OK
                            }
                            
                        </td>
                    </tr>
                }
            </table>
        }

        <dt>
            @Html.DisplayNameFor(model => model.cost)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cost)
        </dd>

    </dl>
</div>
<p>  
    
    <a href='@Url.Action("Details", "Customers", new { id = Model.customerID})'>Retour au profil de l'utilisateur</a>
    
</p>
