@model VideothequeProjet.Models.Movies

@{
    ViewBag.Title = "Edit";
}

<h2>Edition de @Model.title</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.movieID)
        

        <div class="form-group">
            <label class = "control-label col-md-2" for="title">Titre</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger" })
            </div>
        </div>

        

        <div class="form-group">
            <label class="control-label col-md-2" for="synopsis">Synopsis</label>
            <div class="col-md-10">
                <textarea class="form-control" name="synopsis">@Model.synopsis</textarea>                
                @Html.ValidationMessageFor(model => model.synopsis, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="duration">Durée (en minutes)</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.duration, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.duration, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="year">Année de sortie</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.year, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.year, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="note">Note</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.note, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.note, "", new { @class = "text-danger" })
            </div>
        </div>
        <tr>
            <label class="control-label col-md-2">Genre</label>
        @{
        int cnt = 0;
        List<VideothequeProjet.Models.FilmTypes> types = ViewBag.Type;

        foreach (var type in types)
        {
            if (cnt++ % 3 == 0)
            {
                @:</tr><tr>
                    }
                @:<td>
                    <input type="checkbox"
                           name="selectedTypes"
                           value="@type.typeID"
                           @(Html.Raw(Model.FilmTypes.Contains(type) ? "checked=\"checked\"" : "")) />
                    @type.filmType
                    @:</td>
            }
            @:</tr>
        }

        <div class="form-group">
            <label class="control-label col-md-2" for="price">Prix du film</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.price, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.price, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="nbEx">Nombre d'exemplaires</label>
            <div class="col-md-10">
                <input type="number" class="form-control" name="nbEx" value="@Model.DVD.Where(dvd => dvd.available).Count()"/>                
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
